{% extends 'base.html.twig' %}

{% block body %}
    <h1>Galerie list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>Visible</th>
                <th>Nouveaute</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for galerie in galeries %}
            <tr>
                <td><a href="{{ path('galerie_show', { 'id': galerie.id }) }}">{{ galerie.id }}</a></td>
                <td>{{ galerie.libelle }}</td>
                <td>{{ galerie.image }}</td>
                <td>{% if galerie.visible %}Yes{% else %}No{% endif %}</td>
                <td>{% if galerie.nouveaute %}Yes{% else %}No{% endif %}</td>
                <td>{% if galerie.date %}{{ galerie.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('galerie_show', { 'id': galerie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('galerie_edit', { 'id': galerie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('galerie_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
