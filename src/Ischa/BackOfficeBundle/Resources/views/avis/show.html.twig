{% extends 'base.html.twig' %}

{% block body %}
    <h1>Avis</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ avi.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ avi.message }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if avi.date %}{{ avi.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('avis_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('avis_edit', { 'id': avi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
