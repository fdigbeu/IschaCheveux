                <th>Id</th>
                <th>Prixunitaire</th>
                <th>Pourcentagepromo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td><a href="{{ path('tarif_show', { 'id': tarif.id }) }}">{{ tarif.id }}</a></td>
                <td>{{ tarif.prixUnitaire }}</td>
                <td>{{ tarif.pourcentagePromo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tarif_show', { 'id': tarif.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tarif_edit', { 'id': tarif.id }) }}">edit</a>
